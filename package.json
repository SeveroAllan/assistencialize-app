{
  "name": "assistencialize",
  "version": "1.0.2",
  "description": "Meu App Multi WhatsApp",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Seu Nome",
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  },
  "build": {
    "appId": "com.assistencialize.app",
    "productName": "Assistencialize",
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "styles.css",
      "icon.png",
      "src/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "SeveroAllan",
        "repo": "assistencialize-app",
        "private": false
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SeveroAllan/assistencialize-app.git"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@supabase/supabase-js": "^2.95.3",
    "electron-updater": "^6.7.3"
  }
}